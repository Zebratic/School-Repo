{
    "manifest_version": 3,
    "name": "AarhusTech++",
    "description": "GÃ¸r din oplevelse med Aarhus Tech's hjemmesider bedre!",
    "version": "1.0",
    "web_accessible_resources": [{
        "resources": ["scripts/modules/intercepter.js"],
        "matches": ["<all_urls>"]
    }],
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "declarativeNetRequest",
        "declarativeNetRequestFeedback",
        "tabs"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon.png",
            "48": "images/icon.png",
            "128": "images/icon.png"
        }
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://selvbetjening.aarhustech.dk/WebTimeTable/default.aspx*"],
            "js": ["scripts/modules/BedreSkema.js"],
            "css": ["styles/darkmode.css"]
        },
        {
            "matches": ["*://app.minlaering.dk/bog/*/kapitel/*/sektion/*"],
            "js": ["scripts/modules/MinLaering.js"],
            "css": []
        }
    ],
    "host_permissions": [
        "https://*.aarhustech.dk/*",
        "https://aarhustech.dk/*",
        "https://*.itslearning.com/*",
        "https://itslearning.com/*",
        "https://*.minlaering.dk/*",
        "https://minlaering.dk/*"
    ]
}